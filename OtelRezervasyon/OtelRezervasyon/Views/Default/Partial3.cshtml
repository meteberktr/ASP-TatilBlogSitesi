@using OtelRezervasyon.Models.Sınıflar
@model List<Blog>

<div class="padding">
    <h4>Top 10 Öneri Listesi</h4>
    <ul class="list list-pad">
        @{ int i = 0;}
        @foreach (var x in Model)
        {
        <li class="list-bg"><span>@{i++;} @i.</span><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
        }
    </ul>
        
    <a href="/Blog" class="link1">Diğer gezi yerleri</a>
</div>
